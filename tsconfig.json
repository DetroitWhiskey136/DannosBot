{
  "compilerOptions": {
    "composite": true,
    "target": "ES2019",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "baseUrl": ".",
    "rootDirs": ["src", "dist/src"],
    "resolveJsonModule": true,
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules/**/*", "dist/**/*"],

  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "entryPointStrategy": ["Resolve"],
    "out": "docs",
    "name": "Dannos Bot Documentation",
    "excludePrivate": true,
    "excludeInternal": true,
    "includeVersion": true,
    "disableSources": true,
    "readme": "none",
    "defaultCategory": "Misc",
    "hideGenerator": true,
    "validation": {
      "invalidLink": true
    },
    "customCss": "./data/resources/docs.css",
    "emit": true,
    "theme": "default",
    "darkHighlightTheme": "material-darker",
    "logLevel": "Verbose"
  }
}
